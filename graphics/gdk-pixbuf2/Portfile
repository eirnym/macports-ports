# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           meson 1.0

name                gdk-pixbuf2
set gname           gdk-pixbuf
epoch               2
version             2.42.6
revision            0
license             LGPL
set branch          [join [lrange [split ${version} .] 0 1] .]
categories          graphics
maintainers         {devans @dbevans} openmaintainer
homepage            http://www.gtk.org/
platforms           darwin
distname            ${gname}-${version}
use_xz              yes

description         The gdk-pixbuf-2.0 library

long_description    ${description}

master_sites        gnome:sources/${gname}/${branch}/

checksums           rmd160  9e01426ea380fa2ed6dd34410b8207a034792fb0 \
                    sha256  c4a6b75b7ed8f58ca48da830b9fa00ed96d668d3ab4b1f723dcf902f78bde77f \
                    size    7708484

depends_build-append \
                    port:pkgconfig \
                    port:libxslt

depends_lib         path:lib/pkgconfig/glib-2.0.pc:glib2 \
                    port:gettext \
                    port:gobject-introspection \
                    port:shared-mime-info \
                    port:libpng \
                    port:jasper \
                    path:include/turbojpeg.h:libjpeg-turbo \
                    port:tiff

license_noconflict  gobject-introspection

patchfiles          override-math-function-tests.patch

compiler.c_standard 1999

configure.ldflags-append -lintl

configure.args      -Dx11=false \
                    -Ddocs=false \
                    -Dgtk_doc=false \
                    -Dman=false \
                    -Djasper=true

if {![info exists universal_possible]} {
    set universal_possible [expr {${os.universal_supported} && [llength ${configure.universal_archs}] >= 2}]
}
# gobject-introspection uses g-ir-scanner, which uses $CC from env
if {${universal_possible} && [variant_isset universal]} {
    foreach arch ${configure.universal_archs} {
        lappend merger_build_env(${arch})  "CC=${configure.cc} -arch ${arch}"
        lappend merger_destroot_env(${arch})  "CC=${configure.cc} -arch ${arch}"
    }
} else {
    build.env-append       "CC=${configure.cc} ${configure.cc_archflags}"
    destroot.env-append    "CC=${configure.cc} ${configure.cc_archflags}"
}

platform darwin 8 {
    # meson on Tiger cannot use rpaths, so we workaround with this to find dylib
    build.env-append       "DYLD_LIBRARY_PATH=${build_dir}/gdk-pixbuf"
    destroot.env-append    "DYLD_LIBRARY_PATH=${build_dir}/gdk-pixbuf"
}

variant bundle description {Enable application bundle relocation support} {
    configure.args-append   -Drelocatable=true
}

variant x11 {
    depends_lib-append      port:xorg-libX11
    configure.args-replace  -Dx11=false -Dx11=true
}

variant docs {
    depends_build-append      port:gtk-doc
    configure.args-replace  -Ddocs=false -Ddocs=true
    configure.args-replace  -Dman=false -Dman=true
    configure.args-replace  -Dgtk_doc=false -Dgtk_doc=true
}

if {![variant_isset quartz]} {
    default_variants    +x11
}

post-activate {
        system "${prefix}/bin/gdk-pixbuf-query-loaders --update-cache"
}

livecheck.type      gnome
livecheck.name      ${gname}
